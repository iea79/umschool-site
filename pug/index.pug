                    .translation__video#video-prew-2
                        img(src="img/translation.png", alt="")
                    .translation__video#video-prew-3
                        img(src="img/translation.png", alt="")
                    .translation__video#video-prew-4
                        img(src="img/translation.png", alt="")

    // end translation

    // begin choosen
    mixin examsItem(name)
        .choosen__infoTop
            .choosen__infoName= name
            .choosen__infoPhoto
                .choosen__infoPhotoLabel Преподаватели:
                .choosen__infoPhotoItem
                    img(src="img/choosen-1.png", alt="") 
                    span Артур Шарафиев
                .choosen__infoPhotoItem
                    img(src="img/choosen-2.png", alt="") 
                    span Анастасия Малова
                .choosen__infoPhotoItem
                    img(src="img/choosen-3.png", alt="") 
                    span Александр Долгих

        .choosen__infoDescr Умскул — это №1 онлайн-школа подготовки к ЕГЭ и ОГЭ. За 4 года мы подготовили более 15 000 ребят, которые сдали ЕГЭ на высокие баллы, а 312 человек сдали ЕГЭ на 100 баллов.

        .choosen__pay
            .choosen__payLabel Оплатить мастер-группу:
            .choosen__payList
                //- each pay, i in [{name: 'МГ Лайт', b: '1 500 ₽'}, {name: 'МГ Стандарт', b: '2 950 ₽'}, {name: 'МГ Про', b: '3 650 ₽'}, {name: 'МГ Хард', b: '3 750 ₽'}, {name: 'МГ Премиум', b: '4 500 ₽'}, {name: '', b: 'Бесплатная неделя'}, ]
                each pay, i in [{name: 'МГ Стандарт', b: '2 950 ₽'}, {name: 'МГ Про', b: '3 650 ₽'}, {name: 'МГ Хард', b: '3 750 ₽'}, {name: '', b: 'Бесплатная неделя'}, ]
                    if i === 3
                        .choosen__payItem.choosen__payItem_free(data-toggle="modal" data-target="#getProgram-free")
                            .choosen__payImg
                                img(src="img/choosen-pay-6.png", alt="")
                            .choosen__payText
                                b= pay.b
                    else
                        .choosen__payItem(data-toggle="modal" data-target="#getProgram-"+(i+1)+"")
                            .choosen__payImg
                                img(src="img/choosen-pay-"+(i+2)+".png", alt="")
                            .choosen__payText= pay.name 
                                b= pay.b

            .choosen__payQuest
                a(href="#" data-toggle="modal" data-target="#masterGroup") Чем отличаются мастер-группы друг от друга?

    mixin examsList(tab)
        .choosen__list
            // Тут первый элемнт в списке для моб версии
            .choosen__current Математика
            .choosen__drop
                .scrollbar
                    -var choosen = ['Математика', 'Русский язык', 'Физика', 'Химия', 'Общество', 'История', 'Английский язык', 'Немецкий язык', 'География', 'Информатика', 'Химия', 'Математика', 'Русский язык', 'Физика', 'Химия', ];
                    each item, i in choosen
                        if i == 0
                            .choosen__listItem.active(data-tab=""+tab+"-choosen-"+i+"")= item
                        else
                            .choosen__listItem(data-tab=""+tab+"-choosen-"+i+"")= item

        each item, i in choosen
            if i == 0
                .choosen__info.active(id=""+tab+"-choosen-"+i+"")
                    +examsItem(item)
            else
                .choosen__info(id=""+tab+"-choosen-"+i+"")
                    +examsItem(item)


    section#choosen.choosen.section
        .container_center
            h2.section__title.desktop Выберите, к какому экзамену вы готовитесь
            .section__title.mobile Оплатить занятие:
            .choosen__label.mobile Выберите экзамен:
            .choosen__content
                .choosen__tabs
                    .choosen__tab(data-tab="exam-1").active ЕГЭ
                    .choosen__tab(data-tab="exam-2") ОГЭ
                .choosen__panes
                    .choosen__label.mobile Выберите предмет:
                    .choosen__pane.active#exam-1
                        +examsList('exam-1')

                    .choosen__pane#exam-2
