    // End modal modalInfo


    // Button trigger modal getProgram
    //- button(class="btn btn-primary btn-lg" data-toggle="modal" data-target="#getProgram") Click to open modal
    // Begin Modal getProgram
    .modal.fade.getProgram#getProgram-1
        .modal-dialog
            a(href="#" class="modal-close" data-dismiss="modal")
            .modal-content
                .getProgram__header
                    .getProgram__img
                        img(src="img/choosen-pay-2.png", alt="")
