extends layout/layout.pug

block content
    // begin home
    section#home.home.section
        .container_center
            .home__content
                h1.home__title Поможем подготовиться <br>к ЕГЭ и ОГЭ на 80+ баллов <br>﻿в режиме онлайн
                h2.section__sub Так же, как помогли 17 000 ученикам до этого
                .home__action
                    button.btn.btn_success(data-toggle="modal" data-target="#free") Бесплатная неделя подготовки
                    .home__pay или 
                        a(href="#choosen" data-scroll-to) оплатите обучение сразу

    // end home

    // begin profits
    .profits
        .container_center
            .profits__list
                .profits__item
                    .profits__number 26 327
                    .profits__name Количество учеников
                .profits__item
                    .profits__number 312
                    .profits__name Количество 
                        img(src="img/logo-sm.svg", alt="")
                        |стобальников
                .profits__item
                    .profits__number 83
                    .profits__name Средний балл
                        img.tooltip(src="img/info.png",  data-tooltip-content="#tooltip_content" title="")
